{
  "name": "aws-cdk-example",
  "version": "0.1.0",
  "bin": {
    "aws-cdk-example": "bin/aws-cdk-example.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deps:api": "cd api && npm install",
    "deps:layers": "cd layers/nodejs && npm install",
    "deps": "npm run deps:api && npm run deps:layers",
    "build:api":"npm run deps && cd api && npm run build",
    "bootstrap": "npm run build:api && cdk bootstrap",
    "deploy": "npm run bootstrap && cdk deploy"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "17.0.32",
    "aws-cdk": "2.24.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.4"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda": "^1.156.0",
    "aws-cdk-lib": "2.24.0",
    "constructs": "^10.1.7",
    "source-map-support": "^0.5.21"
  }
}
